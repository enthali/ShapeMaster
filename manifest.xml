<?xml version="1.0" encoding="utf-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/officeapp" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:type="TaskPaneApp">
  <Id>YOUR-ADDIN-ID</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Provider Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Shape Master JS"/>
  <Description DefaultValue="A PowerPoint add-in that enhances shape manipulation capabilities using JavaScript."/>
  <IconUrl DefaultValue="assets/icons/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="assets/icons/icon-80.png"/>
  <SupportUrl DefaultValue="https://your-support-url.com"/>
  
  <Hosts>
    <Host Name="Presentation"/>
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="ExcelApi" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="TaskPane">
      <SourceLocation DefaultValue="https://localhost:3000/src/taskpane/taskpane.html"/>
      <RequestedHeight>500</RequestedHeight>
    </Form>
  </FormSettings>
  
  <Permissions>ReadWriteDocument</Permissions>
</OfficeApp>